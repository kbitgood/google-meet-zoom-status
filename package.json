{
  "name": "google-meet-zoom-status",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --cwd packages/extension build",
    "build:watch": "bun run --cwd packages/extension build:watch",
    "build:dist": "bun run --cwd packages/extension build:dist",
    "typecheck": "bun run typecheck:extension && bun run typecheck:server",
    "typecheck:extension": "bun run --cwd packages/extension typecheck",
    "typecheck:server": "bun run --cwd packages/server typecheck",
    "server:dev": "bun run --cwd packages/server dev",
    "server:compile": "bun run --cwd packages/server compile"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
